@{
    ViewBag.Title = "Home Page";
}

<script>
    function MouseOverNope() {
        document.getElementById("nopeBtn").innerText = "Yeah";
        document.getElementById("yeahBtn").innerText = "Nope";
    }
    function MouseOutNope() {
        document.getElementById("nopeBtn").innerText = "Nope";
        document.getElementById("yeahBtn").innerText = "Yeah";
    }
</script>

<div class="box">
    @if(!Request.IsAuthenticated)
    {
        <div class="welcome-box">
            <img class="welcome-image"
                 src="~/Content/images/WelcomeStatement_Alt_Trimmed.png"/>
        </div>
        <div class="home-buttons-box">
            <div class="middle-box">
                <div class="half-box">
                    <a id="nopeBtn"
                       href="/Account/Register"
                         class="round-button box-shape big-text clickable"
                         onmouseover="MouseOverNope()"
                         onmouseout="MouseOutNope()">
                        Nope
                    </a>
                </div>
                <div class="half-box">
                    <a id="yeahBtn"
                       href="/Account/Login"
                       class="round-button box-shape big-text clickable">
                        Yeah
                    </a>
                </div>
            </div>
        </div>
    }
</div>


